<div class="container text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">INICIO</a></li>
            <li class="breadcrumb-item"><a href="/submotivo">LISTA DE SUB MOTIVO</a></li>
            <li class="breadcrumb-item"><a>EDITAR SUB MOTIVO</a></li>
            <li class="breadcrumb-item"><a href="/submotivo/adicionar">NOVA SUB MOTIVO <img src="img/add-24.png" alt=""></a>
            </li>
        </ol>
    </nav>
</div>

<main class="container">
    <% var arrSubMotivo=JSON.parse(data); arrSubMotivo.forEach(el=>{
        subMotivo = el
        });
        var arrMotivos = JSON.parse(motivos);
        %>

        <form action="/submotivo/editar/salvar" method="post" class="row g3">
             <input type="hidden" value="<%=subMotivo.idSubMotivo%>" name="idSubMotivo">
             <div class="col">
                <label class="form-label">CODIGO SUBMOTIVO</label>
                <input type="number" class="form-control" value="<%= subMotivo.codigoSubMotivo%>"  name="codigoSubMotivo">
            </div>
            <div class="col">
                <label class="form-label">DESCRIÇÃO SUBMOTIVO</label>
                <input type="text" class="form-control" value="<%=subMotivo.descSubMotivo%>" name="descSubMotivo">
            </div>
             <div class="col">
                <label class="form-label">MOTIVO</label>
                <select class="form-select" name="idMotivo">
                   <% arrMotivos.forEach(motivo=>{%>
                        <option
                        <%= subMotivo.idMotivo == motivo.idMotivo ? "selected": "" %>
                        value="<%= motivo.idMotivo%>"><%= motivo.codigoMotivo %>- <%= motivo.descMotivo %></option>
                   <%}) %>
                </select>
            </div>           
            <div class="row g-3">
                <div class="col-1">
                    <input type="submit" class="btn btn-success" value="SALVAR">
                </div>
                <div class="col-1">
                    <a class="btn btn-secondary" href="/submotivo">CANCELAR</a>
                </div>
            </div>
        </form>
</main>